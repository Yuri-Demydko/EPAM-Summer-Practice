@model PL.ASP.MVC.Models.Books.UploadOrEditBookViewModel
@{
    ViewBag.Title = "Upload new book";
}

<form style="width:80vw;margin: 1rem auto;" method="post" asp-controller="Books" asp-action="UploadBook" enctype="multipart/form-data">
    <h2>New book uploading</h2>
    <div asp-validation-summary="All"></div>
    <div class="form-row">
        <div class="form-group col-md-6">
            <label asp-for="Title">Book's title</label>
            <input type="text" maxlength="100" asp-for="Title" class="form-control" placeholder="War and Peace">
            <span asp-validation-for="Title"></span>
        </div>
        <div class="form-group col-md-6">
            <label asp-for="Author">Book's author</label>
            <input asp-for="Author" maxlength="100" type="text" class="form-control" placeholder="Leo Tolstoy">
            <span asp-validation-for="Author"></span>
        </div>
    </div>
    <div class="form-row">
        <div class="form-group col-md-6">
            <label asp-for="Genre">Book's genre</label>
            <input type="text" maxlength="100" asp-for="Genre" class="form-control" placeholder="Novel">
        </div>
        <div class="form-group col-md-6">
            <label asp-for="BookFile">Book's PDF file</label>
            <input type="file" accept=".pdf" asp-for="BookFile" class="form-control"/>
        </div>
    </div>

    <div>
        <div class="form-group">
            <label asp-for="Description">Describe book you uploading</label>
            <textarea class="form-control" asp-for="Description"></textarea>
        </div>
        <input class="btn btn-primary btn-block" type="submit" value="Upload"/>
    </div>
</form>